<form ng-submit="addPoll()" ng-show="isLoggedIn()" style="margin-top:30px;" name="newForm">
  <h5>Name your poll</h5>
  <div ng-hide="isLoggedIn()">
    <<h3>You need to <a href="/#/login">Log In</a> of <a href="/#/register">Register</a> before you can create a poll.</h3>
  </div>

  <div class="form-group">
    <input type="text"
      class="form-control"
      placeholder="Title"
      ng-model="title"></input>
  </div>


  <h5>Options</h5>
  <div class="form-group" id="choices">
    <input type="text"
    class="form-control"
    placeholder="{{placeholders[$index]}}"
    ng-model="item[$index].choiceText" ng-repeat="placeholder in placeholders"></input>
  </div>
  <p>
    <button type="button" class="btn btn-default" ng-click="addChoices()">More Options</button>
    <button type="submit" class="btn btn-success">Submit</button>
  </p>
</form>