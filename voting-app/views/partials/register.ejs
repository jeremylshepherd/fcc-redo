<form class="form-horizontal" ng-submit="register()">
  <div class="form-group">
    <div ng-show="error" class="alert alert-danger row">
      <span>{{ error.message }}</span>
    </div>
    <label for="inputName" class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputName" ng-model="user.name">
      </div>
  </div>
  <div class="form-group">
    <label for="inputEmail" class="col-sm-2 control-label">Email</label>
      <div class="col-sm-10">
        <input type="email" class="form-control" id="inputEmail" ng-model="user.username">
      </div>
  </div>
  <div class="form-group">
    <label for="inputPassword" class="col-sm-2 control-label">Password</label>
      <div class="col-sm-10">
        <input type="password" class="form-control" id="inputPassword" ng-model="user.password">
      </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <p>
        <button type="submit" class="btn btn-success btn-lg">Sign up</button>
        <button type="button" class="btn btn-primary btn-lg"><span class="fa fa-twitter"></span> Connect with Twitter</button>
      </p>
    </div>
  </div>
</form>
